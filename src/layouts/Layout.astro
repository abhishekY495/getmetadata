---
import "../styles/global.css";
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>GetMetadata</title>
    <meta name="description" content="Get metadata including title, description, icon, og, etc. of a website" />
    <link rel="canonical" href="https://getmetadata.pages.dev">
    <!-- open graph -->
    <meta property="og:title" content="GetMetadata">
    <meta property="og:description" content="Get metadata including title, description, icon, og, etc. of a website">
    <meta property="og:url" content="https://getmetadata.pages.dev">
    <meta property="og:image" content="https://getmetadata.pages.dev/og-image.png">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <!-- twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="GetMetadata">
    <meta name="twitter:description" content="Get metadata including title, description, icon, og, etc. of a website">
    <meta name="twitter:image" content="https://getmetadata.pages.dev/og-image.png">
    <meta name="twitter:image:width" content="1200">
    <meta name="twitter:image:height" content="630">
    <meta name="twitter:image:type" content="image/png">
  </head>
  <body
    class="bg-(--primary-bg-color) text-white overflow-y-scroll min-h-screen flex flex-col p-4"
  >
    <div class="flex-1">
      <slot />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
